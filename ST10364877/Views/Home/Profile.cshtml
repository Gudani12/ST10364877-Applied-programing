@model ST10364877.Models.User
@{
    ViewData["Title"] = "User Profile - Disaster Alleviation Foundation";
}

<style>
    .profile-avatar-large {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        margin: 0 auto;
        border: 4px solid white;
        box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
    }

    .quick-action-card {
        border: 2px solid transparent;
        border-radius: 15px;
        padding: 2rem 1rem;
        text-align: center;
        transition: all 0.3s ease;
        background: white;
    }

        .quick-action-card:hover {
            border-color: var(--primary);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="glass-card p-4 p-md-5">
                <!-- Header -->
                <div class="text-center mb-5">
                    <h1 class="fw-bold gradient-text">User Profile</h1>
                    <p class="text-muted">Your personal dashboard and account information</p>
                </div>

                <div class="row align-items-center mb-5">
                    <!-- Profile Avatar -->
                    <div class="col-md-4 text-center mb-4">
                        <div class="profile-avatar-large">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="mt-3">
                            <span class="badge bg-success fs-6 px-3 py-2">
                                Active Member
                            </span>
                        </div>
                    </div>

                    <!-- Profile Details -->
                    <div class="col-md-8">
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <div class="glass-card p-3">
                                    <small class="text-muted d-block">Username</small>
                                    <strong class="fs-5 text-dark">@Model.Username</strong>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="glass-card p-3">
                                    <small class="text-muted d-block">Email Address</small>
                                    <strong class="fs-5 text-dark">@Model.Email</strong>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="glass-card p-3">
                                    <small class="text-muted d-block">Full Name</small>
                                    <strong class="fs-5 text-dark">@Model.FirstName @Model.LastName</strong>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="glass-card p-3">
                                    <small class="text-muted d-block">Phone Number</small>
                                    <strong class="fs-5 text-dark">@(Model.PhoneNumber ?? "Not provided")</strong>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="glass-card p-3">
                                    <small class="text-muted d-block">Member Since</small>
                                    <strong class="fs-5 text-dark">@Model.CreatedAt.ToString("MMMM dd, yyyy")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Impact Statistics -->
                <div class="row mb-5">
                    <div class="col-md-3 mb-3">
                        <div class="stat-card">
                            <h3 class="fw-bold display-4">0</h3>
                            <p class="mb-0">Incidents Reported</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card" style="background: linear-gradient(135deg, var(--success), #059669);">
                            <h3 class="fw-bold display-4">0</h3>
                            <p class="mb-0">Donations Made</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card" style="background: linear-gradient(135deg, var(--warning), #d97706);">
                            <h3 class="fw-bold display-4">0</h3>
                            <p class="mb-0">Volunteer Hours</p>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
                            <h3 class="fw-bold display-4">0</h3>
                            <p class="mb-0">Lives Impacted</p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="mb-4">
                    <h4 class="fw-bold text-dark mb-4 text-center">Quick Actions</h4>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-controller="Incident" asp-action="Report" class="quick-action-card text-decoration-none">
                                <i class="fas fa-exclamation-triangle text-danger fs-1 mb-3"></i>
                                <div class="fw-bold text-dark">Report Emergency</div>
                                <small class="text-muted">Alert authorities instantly</small>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Contribution" asp-action="Create" class="quick-action-card text-decoration-none">
                                <i class="fas fa-donate text-success fs-1 mb-3"></i>
                                <div class="fw-bold text-dark">Make Contribution</div>
                                <small class="text-muted">Support those in need</small>
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Volunteer" asp-action="Register" class="quick-action-card text-decoration-none">
                                <i class="fas fa-users text-warning fs-1 mb-3"></i>
                                <div class="fw-bold text-dark">Volunteer</div>
                                <small class="text-muted">Join relief efforts</small>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="glass-card p-4">
                    <h5 class="fw-bold text-dark mb-3">Recent Activity</h5>
                    <div class="text-center py-4">
                        <i class="fas fa-chart-line display-1 text-muted mb-3"></i>
                        <h6 class="text-muted mb-3">Your Journey Begins Here</h6>
                        <p class="text-muted mb-0">
                            Start making a difference today. Every action you take creates positive change in our community.
                            Your impact story is just beginning.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>